%header{class: header_class, role: "banner"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Tiq', root_path, class: 'navbar-brand'
    %nav.collapse.navbar-collapse.bs-navbar-collapse{role: "navigation"}
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to '#' do
              %span.octicon.octicon-mortar-board
              Courses
          %li
            = link_to '#' do
              %span.octicon.octicon-home
              Dashboard
          - if current_user.teacher?
            %li.dropdown
              %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                %i.fa.fa-user
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to '#' do
                    %i.fa.fa-cog
                    Account settings
                %li
                  = link_to '#' do
                    %i.fa.fa-cog
                    Organisation settings
                %li
                  = link_to '#' do
                    %i.fa.fa-user
                    View all Students
                %li
                  = link_to '#' do
                    %span.octicon.octicon-cloud-upload
                    Import Students
                %hr
                %li
                  = link_to '#', method: :delete do
                    %i.fa.fa-sign-out
                    Sign out
          - else
            %li.dropdown
              %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                %i.fa.fa-user
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to '#', method: :delete do
                    %i.fa.fa-cog
                    Sign out
        - else
          %li= link_to 'Home', root_path
          %li= link_to 'Pricing', '#'
          %li= link_to 'Features', '#'
          %li= link_to 'Register', '#'
          %li= link_to 'Sign in', '#', class: 'button'
