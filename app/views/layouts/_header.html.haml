%header{class: header_class, role: "banner"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Tiq', root_path, class: 'navbar-brand'
    %nav.collapse.navbar-collapse.bs-navbar-collapse{role: "navigation"}
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to dashboard_path do
              %span.octicon.octicon-home
              Dashboard
          %li.dropdown
            %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
              %i.fa.fa-user
              = "#{current_user.first_name} #{current_user.last_name}"
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to edit_user_registration_path do
                  %i.fa.fa-cog
                  Settings
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-cog
                  Sign out
        - else
          %li= link_to 'Home', root_path
          %li= link_to 'Pricing', '#'
          %li= link_to 'Features', '#'
          %li= link_to 'Register', new_user_registration_path
          %li= link_to 'Sign in', new_user_session_path, class: 'button'
